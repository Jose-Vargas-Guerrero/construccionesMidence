---
import 'animate.css'
---

<div class="mainContainer">
  <div class="fade">
    <div class="mainContent">
      <h1 class="animate__animated animate__fadeInLeft">MIDENCE</h1>
      <h2 class="animate__animated animate__fadeInLeft">Construye</h2>
      <p class="animate__animated animate__fadeInLeft">¿Listo para convertir tus ideas en realidad?</p>
      <a href="#formulario" class="animate__animated animate__fadeInLeft">comencemos</a>
    </div>
  </div>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
  }

  .mainContainer {
    height: 100vh;
    max-width: 100vw;
    background-image: url("../../images/hero.jpg");
    background-size: cover;
    background-position: center;
  }

  .fade {
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 2;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .mainContent {
    padding: 0 2rem;
    z-index: 6;
    height: auto;
    width: 50vw;
  }

  .mainContent > h1 {
    color: var(--green);
    font-size: 7rem;
    font-weight: bold;
  }

  .mainContent > h2 {
    color: var(--custom-white);
    font-size: 3rem;
  }

  .mainContent > p {
    color: var(--custom-white);
    font-size: 2rem;
    margin: 2rem 0 2rem 0;
  }

  .mainContent > a {
    background-color: var(--blue);
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1rem;
    color: var(--custom-white);
    padding: 0.5rem 2rem;
    border-radius: 5px;
    transition: background-color 0.2s ease-in-out;
  }

  .mainContent > a:hover {
    background-color: var(--green);
  }

  @media (min-width: 1024px) and (max-width: 1200px) {
    .fade {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .mainContent {
      width: auto;
      padding: 0 2rem;
    }

    .mainContent > h1 {
      font-size: 6rem;
      font-weight: bold;
    }

    .mainContent > h2 {
      color: var(--custom-white);
      font-size: 3rem;
    }

    .mainContent > p {
      font-size: 1.5rem;
    }

    .mainContent > a {
      font-size: 1.1rem;
      padding: 0.5rem 2rem;
    }
  }

  /* Tablets pequeñas (768px a 1024px) */
  @media (min-width: 768px) and (max-width: 1024px) {
    .fade {
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .mainContent {
      width: auto;
      padding: 0 2rem;
    }

    .mainContent > h1 {
      font-size: 7rem;
      font-weight: bold;
    }

    .mainContent > h2 {
      font-size: 2.7rem;
    }

    .mainContent > p {
      font-size: 1.6rem;
    }

    .mainContent > a {
      font-size: 1.1rem;
      padding: 0.53rem 2rem;
    }
  }

  /* Móviles grandes (576px a 768px) */
  @media (min-width: 576px) and (max-width: 768px) {
    .fade {
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .mainContent {
      width: auto;
      padding: 0 2rem;
    }

    .mainContent > h1 {
      font-size: 5rem;
      font-weight: bold;
    }

    .mainContent > h2 {
      font-size: 2.3rem;
    }

    .mainContent > p {
      font-size: 1.6rem;
    }

    .mainContent > a {
      font-size: 1.1rem;
      padding: 0.53rem 2rem;
    }
  }

  /* Móviles pequeños (menor a 576px) */
  @media (max-width: 575px) {
    .fade {
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .mainContent {
      width: auto;
      padding: 0 2rem;
    }

    .mainContent > h1 {
      font-size: 4rem;
      font-weight: bold;
    }

    .mainContent > h2 {
      font-size: 2rem;
    }

    .mainContent > p {
      font-size: 1.5rem;
    }

    .mainContent > a {
      font-size: 1.1rem;
      padding: 0.5rem 2rem;
    }
  }

  /* dispositivos muy pequenos como iphone 5 */
  @media (min-width: 320px) and (max-width: 568px) {
    .fade {
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .mainContent {
      width: auto;
      padding: 0 2rem;
    }

    .mainContent > h1 {
      font-size: 3rem;
      font-weight: bold;
    }

    .mainContent > h2 {
      font-size: 2rem;
    }

    .mainContent > p {
      font-size: 1.5rem;
    }

    .mainContent > a {
      font-size: 1.1rem;
      padding: 0.5rem 2rem;
    }
  }
</style>
